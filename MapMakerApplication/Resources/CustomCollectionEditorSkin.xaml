	<Style x:Key="ListViewCircles" TargetType="{x:Type collectionManager:CollectionManager}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type collectionManager:CollectionManager}">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="40" />
							<RowDefinition Height="40" />
							<RowDefinition Height="40" />
							<RowDefinition Height="40" />
							<RowDefinition Height="Auto" />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>

						<DataGrid x:Name="ListBox"
						          Grid.Row="0"
						          Grid.RowSpan="4"
						          Grid.ColumnSpan="1"
						          AutoGenerateColumns="False"
						          CanUserAddRows="False"
						          CanUserReorderColumns="False"
						          CanUserResizeColumns="False"
						          CanUserResizeRows="False"
						          CanUserSortColumns="False"
						          IsSynchronizedWithCurrentItem="True"
						          ItemsSource="{Binding ItemsSource,
						                                Mode=TwoWay,
						                                RelativeSource={RelativeSource TemplatedParent}}"
						          SelectedIndex="{Binding SelectedIndex,
						                                  Mode=TwoWay,
						                                  RelativeSource={RelativeSource TemplatedParent}}"
						          SelectedItem="{Binding SelectedItem,
						                                 Mode=TwoWay,
						                                 RelativeSource={RelativeSource TemplatedParent}}"
						          SelectionMode="Single">
							<DataGrid.Columns>
								<DataGridTemplateColumn Header="Min">
									<DataGridTemplateColumn.CellTemplate>
										<DataTemplate>
											<xctk:IntegerUpDown Maximum="{Binding To}"
											                    Minimum="-128"
											                    Value="{Binding From,
											                                    Mode=TwoWay,
											                                    UpdateSourceTrigger=PropertyChanged}" />
										</DataTemplate>
									</DataGridTemplateColumn.CellTemplate>
								</DataGridTemplateColumn>
								<DataGridTemplateColumn Header="Max">
									<DataGridTemplateColumn.CellTemplate>
										<DataTemplate>
											<xctk:IntegerUpDown Maximum="127"
											                    Minimum="{Binding From}"
											                    Value="{Binding To,
											                                    Mode=TwoWay,
											                                    UpdateSourceTrigger=PropertyChanged}" />
										</DataTemplate>
									</DataGridTemplateColumn.CellTemplate>
								</DataGridTemplateColumn>
							</DataGrid.Columns>
						</DataGrid>
						<Button Grid.Column="1"
						        Command="{TemplateBinding CommandAdd}"
						        Content="Add" />
						<Button Grid.Row="1"
						        Grid.Column="1"
						        Width="Auto"
						        Margin="0"
						        HorizontalAlignment="Stretch"
						        Command="{TemplateBinding CommandRemove}"
						        Content="Remove" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>





